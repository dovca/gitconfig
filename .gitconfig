[alias]
	a = add
	aa = add -A .
	b = branch
	bd = branch -D
	c = checkout
	cb = checkout -b
	cm = commit -am
	cma = commit -a --amend
	d = diff
	ds = diff --staged
	g = log --all --oneline --graph
	hf = !git c hotfix && git c master && git pl && git m --no-edit hotfix && git ps && git c devel && git pl && git m --no-edit hotfix && git ps && git bd hotfix
	hfc = !git c master && git pl && git cb hotfix
	m = merge --no-ff
	mf = !git c devel && git pl && git m - --no-edit && git ps
	md = !git c test && git pl && git m devel --no-edit && git ps
	mt = !git c master && git pl && git m test --no-edit && git ps 
	pl = pull -r
	ps = !git pu || ( git pl && git pu )
	pu = push -u origin HEAD
	pf = push -f
	pr = "!usage () { echo \"usage: git pr [-b <target>=devel] [<reviewers>...]\"; };\
		dst=\"devel\";\
		src=$(git rev-parse --abbrev-ref HEAD);\
		while getopts \":b:h\" o; do\
			case \"$o\" in\
				b) dst=$OPTARG;;\
				h) usage; return 0;;\
				*) usage; return 1;;\
			esac;\
		done;\
		shift $((OPTIND-1));\
 		curl https://api.bitbucket.org/2.0/repositories/%COMPANY%/$(basename $(git rev-parse --show-toplevel))/pullrequests\
			-s\
			-u %USERNAME:%PASSWORD%\
			-H 'Content-Type: application/json'\
			-d '{\
				\"title\":\"Merge '\"$src\"' into '\"$dst\"'\",\
				\"source\":{\
					\"branch\":{\
						\"name\":\"'\"$src\"'\"\
					}\
				},\
				\"destination\":{\
					\"branch\":{\
						\"name\":\"'\"$dst\"'\"\
					}\
				},\
				\"reviewers\":[\
					'$(echo -n $@|awk 'BEGIN{RS=\" \"}{print\"{\\\"username\\\":\\\"\"$1\"\\\"}\"}'|paste -sd,)'\
				]\
			}'\
			| jq -r '.links.html.href // .error.message';\
		#"
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbd = rebase devel
	r = reset
	rh = reset --hard
	rhh = reset --hard HEAD^
	rpo = remote prune origin
	s = status
	ss = stash save
	sp = stash pop
